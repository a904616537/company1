doctype html
html(lang='en')
  include includes/head
  body
    include includes/header
    // banner
    #banner
      .container.intro_wrapper
        .inner_content
          h1.title
            | #{company.lang.title}
          h1.intro
            | #{company.lang.subtext}
    .pad30
    .container.wrapper
      .inner_content
        .row
          .pad15
            // slider starts
            #nslider.nivoSlider
              // add your images here
            each item in company.imgurl
              img(src='#{item}', title='#nivocaption1')
            !{company.lang.context}
    // //page
    include includes/footer
    // slider
    script(src='/js/jquery.nivo.slider.pack.js')
    script(type='text/javascript').
      $('#about').addClass('active');
      $(document).ready(function () {
        $('.nivoSlider').nivoSlider({
          effect: 'random',
          animSpeed: 500,
          pauseTime: 5000,
          directionNav: true,
          controlNav: true,
          pauseOnHover: false,
          manualAdvance: true
        });
      });
      //]]>
